{
  "name": "zjson",
  "version": "5.1.2",
  "description": "A powerful JSON formatting and editing tools.",
  "scripts": {
    "ng": "ng",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "start": "node scripts/prepare.js && ng serve --proxy-config proxy.conf.json -o",
    "build": "node scripts/prepare.js && ng build --prod && node scripts/build.js",
    "build:exe": "node scripts/clear.js exe && npm run electron:build && npm run electron:exe && node scripts/prepare.js && npm run package:exe",
    "build:dmg": "node scripts/clear.js dmg && npm run electron:build && npm run electron:dmg && node scripts/prepare.js && npm run package:dmg",
    "electron": "node scripts/prepare.js electron && ng build --prod && node scripts/electron.conf.js && electron dist",
    "electron:build": "node scripts/prepare.js electron && ng build --prod && node scripts/electron.conf.js package",
    "electron:dist": "electron dist",
    "electron:exe": "electron-packager dist zjson --platform=win32 --out=package --icon=dist/zjson.ico --overwrite",
    "electron:dmg": "electron-packager dist zjson --platform=darwin --out=package --icon=dist/zjson.ico --overwrite",
    "package:exe": "node scripts/build-win.js",
    "package:dmg": "electron-installer-dmg package/zjson-darwin-x64/zjson.app package/zjson-darwin-x64 && node scripts/rename.js dmg",
    "preview": "serve build"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.0.0",
    "@angular/common": "^6.0.0",
    "@angular/compiler": "^6.0.0",
    "@angular/core": "^6.0.0",
    "@angular/forms": "^6.0.0",
    "@angular/http": "^6.0.0",
    "@angular/platform-browser": "^6.0.0",
    "@angular/platform-browser-dynamic": "^6.0.0",
    "@angular/router": "^6.0.0",
    "@ngx-translate/core": "^10.0.1",
    "@ngx-translate/http-loader": "^3.0.1",
    "bootstrap": "^3.3.7",
    "core-js": "^2.5.4",
    "font-awesome": "^4.7.0",
    "funclib": "^6.0.5",
    "jquery": "^3.3.1",
    "monaco-editor": "^0.14.3",
    "ngx-bootstrap": "^3.0.1",
    "request": "^2.88.0",
    "rxjs": "6.0.0",
    "rxjs-compat": "6.1.0",
    "unzip": "^0.1.11",
    "zone.js": "^0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.0",
    "@angular/cli": "~6.0.0",
    "@angular/compiler-cli": "^6.0.0",
    "@angular/language-service": "^6.0.0",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.2.1",
    "electron": "^13.2.1",
    "electron-installer-dmg": "^3.0.0",
    "electron-installer-windows": "^3.0.0",
    "electron-packager": "^15.3.0",
    "glob": "^7.1.2",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~1.4.2",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "progress": "^2.0.0",
    "protractor": "~5.3.0",
    "rimraf": "^2.6.2",
    "serve": "^12.0.0",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "typescript": "~2.7.2",
    "value-looker": "^2.1.2"
  }
}
